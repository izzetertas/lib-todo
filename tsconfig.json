{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "ESNext",
    "target": "ES5",
    "lib": ["ES6", "dom", "ES5", "ES7"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
